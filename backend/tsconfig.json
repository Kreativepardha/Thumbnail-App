{
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
